{
  "name": "graffitis-api",
  "version": "1.0.0",
  "description": "graffitis API",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "start:dev": "nodemon src/server.js",
    "start:production": "node src/server.js -e \"NODE_ENV=production\"",
    "node:latest": "sudo npm install -g n && sudo n latest",
    "lint": "eslint **/*.js",
    "lint:fix": "eslint --fix **/*.js",
    "docker:build": "docker build -t graffitis .",
    "docker:run": "docker run --rm --name graffitis -p 5000:5000 -d graffitis",
    "docker:stop": "docker stop graffitis"
  },
  "author": "Reparto Tecnico Graffitids",
  "license": "MIT",
  "dependencies": {
    "body-parser": "^1.19.0",
    "compression": "^1.7.4",
    "express": "^4.17.1",
    "helmet": "^3.22.0",
    "method-override": "^3.0.0",
    "mongoose": "^5.9.6",
    "passport": "^0.4.1"
  },
  "devDependencies": {
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-config-node": "^4.0.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.2",
    "nodemon": "^2.0.2",
    "prettier": "^2.0.2"
  }
}
